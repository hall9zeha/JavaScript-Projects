.row.proximos-viajes
    each travel in travels
        .col-md-6.col-lg-4.mb-4
            .card
                img.card-img-top(src=`img/destinos_${travel.imagen}.jpg`)
                .card-body
                    h2= travel.titulo
                    p
                        svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00abfb' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            rect(x='4' y='5' width='16' height='16' rx='2')
                            line(x1='16' y1='3' x2='16' y2='7')
                            line(x1='8' y1='3' x2='8' y2='7')
                            line(x1='4' y1='11' x2='20' y2='11')
                            rect(x='8' y='15' width='2' height='2')
                        | #{travel.fecha_ida} - #{travel.fecha_vuelta}
                    p
                        svg.icon.icon-tabler.icon-tabler-user-circle(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00abfb' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            circle(cx='12' cy='12' r='9')
                            circle(cx='12' cy='10' r='3')
                            path(d='M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855')


                        | #{travel.disponibles} Disponibles
                    p= travel.descripcion.substr(0,120) + '...'
                    a(href=`viajes/${travel.slug}`, class="btn btn-success btn-block") Más información

            